rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura/escritura a usuarios autenticados en su propio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir a administradores leer/escribir en la colección de usuarios
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['eugenfw@gmail.com', 'admin@feedflow.com'];
    }
    
    // Configuración de la aplicación - solo administradores
    match /config/{document} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['eugenfw@gmail.com', 'admin@feedflow.com'];
    }
    
    // Configuración alternativa de la aplicación
    match /appConfig/{document} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['eugenfw@gmail.com', 'admin@feedflow.com'];
    }
    
    // Generaciones - solo el usuario puede acceder a las suyas
    match /generations/{generationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Administradores pueden leer todas las generaciones
    match /generations/{generationId} {
      allow read: if request.auth != null && 
        request.auth.token.email in ['eugenfw@gmail.com', 'admin@feedflow.com'];
    }
    
    // Administradores - solo lectura para verificación
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
    }
  }
}
