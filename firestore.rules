rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Función helper para verificar administradores
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.email in ['eugenfw@gmail.com', 'admin@feedflow.com'];
    }
    
    // Permitir lectura/escritura a usuarios autenticados en su propio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Permitir a administradores leer/escribir todos los usuarios
      allow read, write: if isAdmin();
    }
    
    // Configuración de la aplicación - solo administradores con permisos completos
    match /config/{document} {
      allow read, write, create, update, delete: if isAdmin();
    }
    
    // Configuración alternativa de la aplicación - solo administradores
    match /appConfig/{document} {
      allow read, write, create, update, delete: if isAdmin();
    }
    
    // Generaciones - el usuario puede acceder a las suyas
    match /generations/{generationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // Administradores pueden leer todas las generaciones
      allow read: if isAdmin();
    }
    
    // Permitir a administradores crear documentos de configuración inicial
    match /{document=**} {
      allow read, write: if isAdmin() && 
        (resource == null || resource.data.keys().hasAny(['freePromotionsEnabled', 'premiumPromotionsEnabled', 'maintenanceMode']));
    }
  }
}
